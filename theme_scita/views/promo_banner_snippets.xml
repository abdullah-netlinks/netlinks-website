    <!-- Health Promotional Services Banner -->
    <template id="health_advertisement_banner" name="Advertisement Banner 3">
        <section class="health_adv_banner_1 oe_img_bg"  style="background-image: url(/theme_scita/static/src/img/health/health-adv-bg.png);">
            <div class='container'>
                <div class="row">
                    <div class='col-md-12 sct_adv_banner'>
