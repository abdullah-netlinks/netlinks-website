                                    <div class='youtube_view'>
                                        <span id='close_youtube_bar'>X</span>
                                        <object id='youtube_id' width="100%" height="100%" data="https://www.youtube.com/embed/07d2dXHYb94">
                                        </object>
                                    </div>
                                </div>                   
                            
                            
                        </div>
                    </div>
                </div>
            </div>
        </section>
